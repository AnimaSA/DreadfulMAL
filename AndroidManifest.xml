<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.somethingdreadful.MAL"
    android:versionCode="2"
    android:versionName="alpha 1" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="14" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:hardwareAccelerated="true" android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity
            android:name=".Home"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstTimeInit" android:label="@string/fr_title"></activity>
        <activity android:name=".AnimeDetails"
                  android:uiOptions="splitActionBarWhenNarrow"></activity>
        <activity android:name=".Settings"></activity>
    </application>

</manifest>